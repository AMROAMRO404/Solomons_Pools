
<div class="c-body">
    <main class="c-main">
        <div class="container-fluid">
            <div class="core-container">
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div>
                                    {{!-- the text should be match the perpose Add/Edit --}}
                                    <h4>Add new Event</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel mb-5 card-accent-info">
                            <div class="panel-body">
                                <form action="#add Route">
                                    <div class="nav-tabs-boxed pseu-tabs">
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="general" role="tabpanel">
                                                <div class="row">
                                                    <div class="col-md-10">
                                                        <div class="row">
                                                            <div class="col-md-5">
                                                                <div class="form-group">
                                                                    <label>Event Name</label><span
                                                                        class="required text-danger ml-1">*</span>
                                                                    <input type="text" class="form-control" required>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-5">
                                                                <div class="form-group">
                                                                    <label class="col-form-label" for="logo">Event
                                                                        Picture</label><span
                                                                        class="required text-danger ml-1">*</span>
                                                                    <input id="logo" type="file" name="logo"
                                                                        accept="image/png,image/jpg,image/jpeg"
                                                                        required>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-5">
                                                                <div class="form-group">
                                                                    <label>Date</label>
                                                                    <input type="time" class="form-control">
                                                                     <input type="date" class="form-control">
                                                                </div>
                                                            </div>
                                                            <div class="col-md-5">
                                                                <div class="form-group">
                                                                    <label>Event Description</label><span
                                                                        class="required text-danger ml-1">*</span>
                                                                    <textarea class="form-control" required></textarea>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <label for="">Location</label>
                                            {{>map}}
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10">
                                                <div class="row">
                                                    <div class="col-md-10">
                                                        <div class="my-3 text-right">
                                                            <button class="btn btn-primary"
                                                                type="submit">Create</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </main>
</div>